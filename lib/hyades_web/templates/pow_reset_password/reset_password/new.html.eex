<%= form_for @changeset, @action, [as: :user, class: "centered"], fn f -> %>
  <h1>Reset password</h1>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= email_input f, :email %>
  <%= error_tag f, :email %>

  <div>
    <%= submit "Submit" %>
  </div>
<% end %>
